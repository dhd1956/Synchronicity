<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/txt_start_date"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/txt_end_date"
        android:layout_toRightOf="@+id/txt_start_date"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:id="@+id/lbl_match_word"
        android:layout_below="@+id/txt_start_date"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Ignore"
        android:id="@+id/btn_ignore"
        android:layout_below="@+id/lbl_match_word"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Match"
        android:id="@+id/btn_match"
        android:layout_below="@+id/btn_ignore"
        android:layout_alignParentLeft="true"  />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Pass"
        android:id="@+id/btn_pass"
        android:layout_below="@+id/btn_match"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:id="@+id/txt_event_details"
        android:layout_toRightOf="@+id/lbl_match_word"
        android:layout_below="@+id/txt_start_date"
        />

    <ListView
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:id="@+id/lst_synch_summary"
        android:layout_below="@+id/txt_end_date"
        android:layout_toRightOf="@+id/txt_event_details"
        />

</RelativeLayout>
