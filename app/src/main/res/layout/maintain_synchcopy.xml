<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synchronicity Aspects and Meaning"
        android:id="@+id/lbl_synch_title"
        android:layout_marginLeft="110dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/txt_description"
        android:layout_alignRight="@+id/lst_events"
        android:layout_alignEnd="@+id/lst_events"
        android:layout_below="@+id/lbl_synch_title"
        android:layout_above="@+id/lst_events" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:id="@+id/lst_events"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/lst_aspects"
        android:layout_alignTop="@+id/txt_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/txt_description"
        android:layout_toLeftOf="@+id/txt_description"
        android:layout_below="@+id/lbl_synch_title" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/lst_event_filters"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lst_aspects" />

</RelativeLayout>
