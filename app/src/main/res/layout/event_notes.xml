<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Person"
        android:id="@+id/lbl_person"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:layout_below="@+id/lbl_person"
        android:id="@+id/txt_person"
        android:layout_alignParentLeft="false"
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Contacts"
        android:id="@+id/btn_contacts"
        android:layout_toRightOf="@+id/txt_person"
        android:layout_alignParentRight="true"
            />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textMultiLine"
        android:layout_height="200dp"
        android:id="@+id/txt_note"
        android:layout_below="@id/txt_person"
        />

    <ListView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/lst_verb"
        android:layout_below="@+id/txt_note"
    />

    <ListView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/lst_thing"
        android:layout_below="@+id/txt_note"
        android:layout_toRightOf="@+id/lst_verb"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/btn_cancel"
        android:layout_below="@+id/lst_verb"  />

    <Button
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="Action"
        android:id="@+id/btn_verb"
        android:layout_toRightOf="@+id/btn_cancel"
        android:layout_below="@+id/lst_verb"  />


    <Button
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="Item"
        android:id="@+id/btn_thing"
        android:layout_toRightOf="@+id/btn_verb"
        android:layout_below="@+id/lst_verb"  />

    <Button
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="Save"
        android:id="@+id/btn_save"
        android:layout_below="@+id/lst_verb"
        android:layout_toRightOf="@+id/btn_thing"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Add Event to Calendar"
        android:id="@+id/btn_add_to_calendar"
        android:layout_below="@+id/btn_cancel"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>



