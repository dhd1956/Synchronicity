<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_synch_date"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Summary"
        android:layout_below="@id/txt_synch_date"
        android:id="@+id/lbl_synch_summary_title"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/lbl_synch_summary"
        android:layout_below="@id/lbl_synch_summary_title"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Details"
        android:id="@+id/lbl_event_details"
        android:layout_below="@id/lbl_synch_summary"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:ems="10"
        android:layout_margin="10dp"
        android:id="@+id/lbl_synch_details"
        android:layout_below="@+id/lbl_event_details" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/lst_events"
        android:layout_below="@+id/lbl_synch_details"/>


