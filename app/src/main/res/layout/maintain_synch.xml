<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_synch_date"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Summary"
        android:layout_below="@id/txt_synch_date"
        android:id="@+id/lbl_synch_summary"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:layout_below="@+id/lbl_synch_summary"
        android:id="@+id/txt_synch_summary"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Details"
        android:id="@+id/lbl_synch_details"
        android:layout_below="@id/txt_synch_summary"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:id="@+id/txt_synch_details"
        android:layout_below="@id/lbl_synch_details"
        android:layout_alignParentLeft="true"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lst_events"
        android:layout_below="@+id/txt_synch_details"/>


