    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Link Life Event"
        android:id="@+id/btn_link_event"
        android:layout_below="@+id/lst_events"
        android:layout_centerHorizontal="false" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="New Life Event"
        android:id="@+id/btn_new_event"
        android:layout_below="@+id/lst_events"
        android:layout_toRightOf="@+id/btn_link_event"
        android:layout_centerHorizontal="false" />

    <Button
